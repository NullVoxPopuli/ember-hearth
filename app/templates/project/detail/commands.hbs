{{#unless help}}
  <div class="ui active text loader absolute-fill">
      Loading project ember commands <br>
  </div>
{{else}}
  {{#if addons}}
      <div class="ui basic segment filter-segment">
          <div class="filter-list">
            {{#each addons as |addon|}}
                <div class="filter-list-item" {{action "toggleAddonFilter" addon}}>
                  {{#if (inArray addonsFilter addon.name)}}
                      <i class="blue radio icon"></i>
                  {{else}}
                      <i class="blue selected radio icon"></i>
                  {{/if}}
                    <span>{{addon.name}}</span>
                </div>
            {{/each}}
          </div>
      </div>
  {{/if}}

  {{#each filteredAddons as |addon|}}
      {{#each addon.commands key='name' as |cmd|}}
        {{ember-cmd project=model cmd=cmd}}
      {{/each}}
  {{/each}}

  {{#each availableCommands key='name' as |cmd|}}
    {{ember-cmd project=model cmd=cmd}}
  {{/each}}

  <br>

{{/unless}}
{{outlet}}